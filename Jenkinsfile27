pipeline{
  agent any 
  tools{
    maven "maven3.8.4"
  }
  stages{
    stage('1.clone'){
      steps{
            sh "echo clonning the latest version of the code" 
            git branch: 'feature', url: 'https://github.com/sikwitit1/web-app
            sh "echo clonning successful"
      }
    }
    stage('2.Build'){
      steps{
        sh "echo validation, compilation, testing and package"
        sh "echo testing successful and ready to package"
        sh "mvn clean package"
      }
    }
    stage('3.Quality'){
      steps{
        sh "echo performing code quality analysis"
        sh "echo code quality successful and ready to upload"
        sh "mvn sonar:sonar"
      }
    }
  stage('4.uploadArtifacts'){
      steps{
        sh "mvn deploy"
      }
    }
  stage('5.Deploy2UAT'){
      steps{
        sh "echo DEPLOYING TO UAT for further testing and validation"
        sshagent(['agentcredentials']) {
        sh "scp -o StrictHostKeyChecking=no target/*.war ec2-user@172.31.14.229:/opt/tomcat9/webapps/apps.war"
      }
    }
  } 
    stage('6.Deploy2Prod'){
      steps{
        sh "echo DEPLOYING application TO Production"
        timeout(time:8, unit:'HOURS'){
        input message: 'Please approve deployment to Production'
      }
        sshagent(['agentcredentials']) {
        sh "scp -o StrictHostKeyChecking=no target/*.war ec2-user@172.31.14.229:/opt/tomcat9/webapps/apps.war"
      }
    }
  }
  post{
    always{
      mail bcc: 'ja4prezz@gmail.com', body: '''Success,

The build was great.

Regards
Jayden A  
+6475257937''', cc: 'ja4prezz@gmail.com', from: '', replyTo: '', subject: 'sucess', to: 'ja4prezz@gmail.com'
    }
    success{
      mail bcc: 'ja4prezz@gmail.com', body: '''Success,

The build was great.

Regards
Jayden A  
+6475257937''', cc: 'ja4prezz@gmail.com', from: '', replyTo: '', subject: 'sucess', to: 'ja4prezz@gmail.com'
    }
    failure{
      mail bcc: 'ja4prezz@gmail.com', body: '''Failed,

The build Failed.

Regards
Jayden A 
+6475257937''', cc: 'ja4prezz@gmail.com', from: '', replyTo: '', subject: 'Failed', to: 'ja4prezz@gmail.com'
    }
  }

}

